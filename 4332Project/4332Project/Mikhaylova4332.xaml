<Window x:Class="_4332Project.Mikhaylova4332"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4332Project"
        mc:Ignorable="d"
        Title="Mikhaylova4332" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock FontSize="40" 
                   FontFamily="Calibri" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   Grid.Row="0"> 
            Mikhaylova Polina 4332
        </TextBlock>
        
        <Button Grid.Row="1" 
                HorizontalAlignment="Left"
                Click="ExcelImportButton_Click">
            Импорт из Excel
        </Button>
        
        <Button Grid.Row="1" 
                HorizontalAlignment="Right" Click="ExcelExportButton_Click">
            Экспорт в Excel
        </Button>
    </Grid>
</Window>
